<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_progress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:hint="Enter Progress"
        android:inputType="number"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/et_progress"
        android:text="Animate"
        android:textAllCaps="false" />

    <com.example.circularpb.CustomProgressBar
        android:id="@+id/circular_custom_progressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/et_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:direction="clockwise" />

</RelativeLayout>